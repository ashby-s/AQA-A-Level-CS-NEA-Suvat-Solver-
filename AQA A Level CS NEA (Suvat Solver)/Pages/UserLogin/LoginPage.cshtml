@page
@model AQA_A_Level_CS_NEA__Suvat_Solver_.Pages.UserLogin.LoginPageModel
@{
}
<div class="text-center container">
    @if (@Model.RegisterApproved)
    {
            <p class="successText">Registration Successful. Please Log In.</p>
    }
    <form method="post" class="mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light alert-light">
     <h2 class="mb-5">Login into your SUVAT Solver Account</h2>
     <hr />
     <p>Username: <input type="text" asp-for="TempUser.Username" placeholder="Enter your Username" /></p>
        @if (@Model.HasUsername == false || @Model.IncorUsername == true)
        {
                <p class="errorText">Username is not valid</p>
        }
        <p>Password: <input type="password" asp-for="TempUser.Password" placeholder="Enter your Password" /></p>
        @if (@Model.HasPassword == false)
        {
                <p class="errorText">Password is not valid</p>
        }
     <button class="btn btn-primary mt-1" type="submit">Login</button>
     <br />
     <a class = "btn btn-outline-secondary small" style="float:right;" asp-page="RegisterPage">Register a new account?</a>
     <br />

 </form>
 </div>