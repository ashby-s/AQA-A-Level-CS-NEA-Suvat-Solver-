@page
@model AQA_A_Level_CS_NEA__Suvat_Solver_.Pages.UserLogin.LoginPageModel
@{
}
<div class="text-center container">
    @if (@Model.RegisterApproved)
    {
        @*Shows if registration has just occured*@
        <p class="successText">Registration Successful. Please Log In.</p>
    }
    <form method="post" class="mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light alert-light">
    <h2 class="mb-5">Login into your SUVAT Solver Account</h2>
    <hr />

    @*Area to input username*@
    <p>Username: <input type="text" asp-for="TempUsername" placeholder="Enter your Username" /></p>
    @if (!@Model.HasUsername)
    {
        @*Response for if Username is not Valid*@
        <p class="errorText">Username is not valid</p>
    }

    @*Area to input password*@
    <p>Password: <input type="password" asp-for="TempPassword" placeholder="Enter your Password" /></p>
    @if (!@Model.HasPassword)
    {
        @*Response for if Password is not Valid*@
        <p class="errorText">Password is not valid</p>
    }
    @if (@Model.ValidationFailed)
    {
        @*Response for if Username and Password do not match table value*@
        <p class="errorText">Credentials entered are incorrect</p>
    }

    @*Button to submit values to be validated*@
    <button class="btn btn-primary mt-1" type="submit">Login</button>
    <br />

    @*Button to go to the registration Page*@
    <a class = "btn btn-outline-secondary small" style="float:right;" asp-page="RegisterPage">Register a new account?</a>
    <br />

 </form>
 </div>